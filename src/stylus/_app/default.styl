/*
  Variables
*/

color-default   = #69797e; // verde musgo
color-primary   = #404548; // verde forte/grafite
color-buy       = #27ae60;
color-secondary = darken(color-default, 30%)

/*
  Buttons
*/

$buy-ticket
  display: inline-block
  padding: .6em 2em
  background: color-buy
  color: #fff
  text-decoration: none
  font-weight: 400
  font-size: 2.2em
  text-transform: uppercase
  &:hover
    background: lighten(@background, 10%)
    box-shadow: 0 0 20px color-primary

/*
  Default
*/

*
  transition: all 0.2s ease

html, body
  height: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  background: url('../img/bg-body.jpg')
  background-size: cover
  background-attachment: fixed
  font-family: 'Open Sans', Arial, helvetica, sans-serif
  font-size: 62.5%
  @media phone
    background-position: center

/*
  Typography
*/
h2
  font-size: 5em
  text-align: center
  color: color-default
  line-height: 1
  margin: 0 0 1.6em 0
  padding: 2.2em 0 0 0
  font-weight: 300
  position: relative

  &:before
    color: color-default
    font-size: 1.2em
    font-family: 'fif-icons'
    left: 47.3%
    position: absolute
    top: .5em

  &:after
    content: ''
    width: 1em
    height: 0
    border-color: color-default
    position: absolute
    left: 47%
    bottom: -.4em
    border-top: 1px solid #ddd

  &.inverse
    color: #fff

    &:after
      left: 48.5%

    &:before
      color: #fff

/*
  Section: Logo and Description
*/

.container
  container()

.header
  height: 100%
  position: relative
  padding: 9em 0
  background: rgba(color-primary, .6)
  text-align: center
  @media phone
    padding-top: 5em

.logo
  background: url('../img/logo.png') no-repeat
  background-size: 100% 100%
  width: 16em
  height: @width
  margin: 0 auto
  text-indent: -9999px
  @media phone
    width: @width - 3
    height: @width

.description
  display: inline-block
  font-size: 4.4em
  text-align: center
  color: color-default
  line-height: 1
  margin: 0
  padding: 1em 0
  font-weight: 300
  position: relative
  margin: 1.2em 0 1.5em
  padding: 0
  text-align: center
  borderColor = #999

  &:after, &:before
    content: ''
    width: .5em
    height: @width
    position: absolute
  
  &:after
    left: -.4em
    top: -.1em
    border-top: 1px solid borderColor
    border-left: @border-top

  &:before
    right: -.4em
    bottom: -.2em
    border-right: 1px solid borderColor
    border-bottom: @border-right

  @media phone
    padding-top: 2em

.description-item
  display: inline-block
  padding: .1em 0
  font-weight: 300
  font-size: .9em
  text-transform: uppercase
  color: #fff
  text-shadow: 0 0 10px rgba(#000, .5)
  @media phone
    font-size: @font-size - .4

.description-value.location
  @media phone
    display: block

.description-divisor:nth-child(4)
  @media phone
    display: none

/*
  Section: Buy Ticket
*/

.buy-ticket-area
  text-align: center
  padding: 0 0 18em
  position: relative
  @media phone
    padding-bottom: 10em
    margin-bottom: 15em

.buy-ticket-header
  @extends $buy-ticket

/*
  Menu
*/
.main-menu
  background: color-secondary
  height: 8em
  box-shadow: 0 -20px 70px rgba(#000, .2)

.main-menu-fixed
  position: fixed
  top: 0
  width: 100%
  z-index: 9999
  box-shadow: 0 5px 20px rgba(#000, .2)

.main-menu-list, .main-menu-buy
  margin: 0
  padding: 0

.main-menu-logo
  display: inline-block
  margin-right: 4em
  padding: 0
  background: url('../img/logo.png') center center no-repeat
  width: 15em
  height: 8em
  vertical-align: middle
  background-size: 100%
  opacity: .4

  &:hover
    opacity: 1

.main-menu-buy
  margin-right: 0

.main-menu-link-buy
  @extends $buy-ticket
  vertical-align: middle
  font-size: 1.8em
  padding: .3em 1em

.main-menu-item
  display: inline-block
  margin-right: 2.7em
  padding: 0
  vertical-align: middle

.main-menu-link
  text-decoration: none
  color: #fff
  font-size: 1.4em
  font-weight: 400
  text-transform: uppercase

  &:hover
    border-bottom: 1px solid #ddd

/*
  Section: Speakers
*/
.speakers
  background: #fff

  h2:before
    content: '\e80f'

.speakers-list
  list-style: none

.speaker-item
  column(3)
  text-align: center
  margin-bottom: 3em
  height: 30em

.speaker-item-photo
  width: 18em
  height: @width
  margin: 0 auto
  border-radius: 50%
  overflow: hidden
  text-align: center
  border: 5px solid rgba(color-default, .0)
  box-shadow: 0 0 0 3px rgba(color-default, .4)
  transition: all .4s ease

  &:hover
    box-shadow: 0 0 0 3px rgba(color-default, .9)

  img
    display: inline-block
    max-width: 180%
    max-height: 100%
    margin-left: -4%

.social-network
  padding-top: .3em

.social-link
  font-size: 3em
  text-decoration: none
  &:before
    margin: 0 .05em

.icon-github-circled
  color: #555
  &:hover
    color: lighten(@color, 10%)

.icon-twitter-circled
  color: #5eaade
  &:hover
    color: lighten(@color, 10%)

.icon-facebook-circled
  color: #3c599f
  &:hover
    color: lighten(@color, 10%)

.speaker-item-title
  font-size: 2em
  text-transform: uppercase
  color: color-default
  font-weight: 400
  position: relative
  margin: 1.4em 0 .3em
  letter-spacing: -.02em
  position: relative
  display: inline-block
  borderColor = #ddd

  &:after, &:before
    content: ''
    width: .5em
    height: @width
    position: absolute
  
  &:after
    left: -.5em
    top: -.1em
    border-top: 1px solid borderColor
    border-left: @border-top

  &:before
    right: -.5em
    bottom: -.1em
    border-right: 1px solid borderColor
    border-bottom: @border-right

.speaker-item-company
  color: color-primary
  font-size: 1.2em
  text-decoration: none
  border-bottom: 1px solid rgba(color-primary, .2)
  display: inline-block

  &:hover
    border-color: color-primary

.speaker-item-bio
  font-size: 1.4em
  color: #777
  margin-top: 2em
  padding: 0 1em

/*
  Section: Location
*/

.location
  position: relative

.location-info
  position: absolute
  width: 35em
  max-width: 95%
  top: 50%
  right: 0
  transform: translateX(-50%) translateY(-50%)
  z-index: 1000
  background: rgba(#fff, .9)
  border-radius: 1em
  text-align: center
  padding: .3em 2em

.location-info-title
  margin: .5em 0 0 0
  font-size: 2em
  color: color-primary
  text-transform: uppercase

.location-info-description
  font-size: 1.6em
  color: #555
  margin: .4em 0 1em 0

#map
  width: 100%
  height: 60em
  position: relative
  tranform: translateZ(0)

/*
  Section: Tickets
*/

.tickets
  background: color-secondary
  padding-bottom: 5em
  text-align: center

  h2:before
    content: '\e805'
    left: 48.3%

.plan-item
  text-align: center
  width: 40em
  border: 1px solid darken(color-primary, 20%)
  display: inline-block
  border-radius: .7em
  margin: 1em
  overflow: hidden

  &:hover
    box-shadow: 0 0 10px 3px rgba(darken(color-primary, 20%), .8)

  &.plan-off
    opacity: .3
    pointer-events: none
    cursor: default

    .plan-price
      color: #777

    .buy-ticket-plan
      background: #444

    &:hover
      box-shadow: none

.plan-title
  color: #fff
  background: darken(color-secondary, 27%)
  margin: 0
  font-weight: 300
  font-size: 2em
  text-transform: uppercase
  padding: 1em

.plan-feature
  font-size: 1.8em
  font-weight: 400
  padding: 1em
  border-bottom: 1px solid rgba(darken(color-primary, 20%), .2)
  margin: 0
  color: #aaa

  &.no-feature
    text-decoration: line-through
    color: rgba(#aaa, .3)

.plan-price
  color: color-buy
  font-weight: 800
  font-size: 2em

.plan-buy-box
  background: darken(color-secondary, 27%)
  padding: 1.4em 0

.buy-ticket-plan
  @extends $buy-ticket
  font-size: 1.8em

/*
  Section: Sponsors
*/

.sponsors
  background: url('../img/bg-footer.jpg') bottom center no-repeat #d9d9d9

.sponsors-list
  margin: 0
  padding: 0 0 3em 0
  list-style: none
  text-align: center

.sponsors-link
  text-decoration: none

.sponsors-item
  display: inline-block
  margin: 3em 0 0
  background: color-default
  border-radius: .7em
  img
    opacity: .6
    -webkit-backface-visibility: hidden
    -webkit-transform: translateZ(0) scale(1.0, 1.0)
    &:hover
      opacity: 1

.support-title
  &:after, &:before
    width: 45%

.arrow
  position: absolute
  bottom: 3em
  left: 50%
  margin-left: -20px
  width: 3.8em
  height: @width
  background-image: url('data:image/svg+xml;base64,')
  background-size: contain
  opacity: .5
  animation(bounce 2s infinite)
  @media phone
    display: none

@keyframes bounce
  0%
    transform(translateY(0))
  50%
    transform(translateY(-30px))