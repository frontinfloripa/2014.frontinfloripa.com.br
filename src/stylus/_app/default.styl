/*
  Variables
*/

color-default = #404548
color-primary = #69797e
color-buy     = #58f086

/*
  Default
*/

*
  transition: all 0.2s ease

html, body
  height: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  background: url('../img/bg-body.jpg')
  background-size: cover
  background-attachment: fixed
  font-family: 'Open Sans', Arial, helvetica, sans-serif
  font-size: 62.5%
  @media phone
    background-position: center

/*
  Section: Logo and Description
*/

main
  container()
  margin-bottom: 7em

.header
  height: 100%
  position: relative
  padding: 9em 0
  @media phone
    padding-top: 5em

.logo
  background: url('../img/logo.png') no-repeat
  background-size: 100% 100%
  width: 13em
  height: @width
  margin: 0 auto
  text-indent: -9999px
  @media phone
    width: @width - 3
    height: @width

.description
  text-align: center
  padding-top: 4em

.description-item
  display: inline-block
  padding: .1em 0
  font-weight: 300
  font-size: 2em
  text-transform: uppercase
  color: #fff
  text-shadow: 0 0 10px rgba(#000, .5)
  border-top: 1px solid rgba(#fff, .2)
  border-bottom: @border-top
  @media phone
    font-size: @font-size - .4

.description-value.location
  @media phone
    display: block

.description-divisor:nth-child(4)
  @media phone
    display: none

/*
  Section: Buy Ticket
*/

.buy-ticket-area
  text-align: center
  padding: 3em 0 18em
  position: relative
  @media phone
    padding-bottom: 10em
    margin-bottom: 15em

.buy-ticket
  display: inline-block
  padding: .6em 2em
  border-radius: 10em
  background: color-buy
  color: #555
  text-decoration: none
  font-weight: 800
  font-size: 1.8em
  text-transform: uppercase
  &:hover
    background: lighten(@background, 10%)
    box-shadow: 0 0 20px color-default

.view-past-link
  display: inline-block
  color: #aaa
  text-decoration: none
  font-weight: normal
  font-size: 1.2em
  &:hover
    border-bottom: 1px solid @color

/*
  Section: Sponsors
*/

.sponsors-area
  margin-top: 8em

.sponsors-title
  font-size: 2.4em
  font-weight: 300
  text-align: center
  text-transform: uppercase
  position: relative
  display: table
  width: 100%
  white-space: nowrap
  line-height: .1em
  span
    background: #fff
    color: color-primary
    padding: .01em .5em .1em

.sponsors-list
  padding: 0
  list-style: none
  text-align: center

.sponsors-link
  text-decoration: none

.sponsors-item
  display: inline-block
  margin: 3em 0 0
  img
    opacity: .6
    &:hover
      opacity: 1

.support-title
  &:after, &:before
    width: 45%

.arrow
  position: absolute
  bottom: 3em
  left: 50%
  margin-left: -20px
  width: 3.8em
  height: @width
  background-image: url('data:image/svg+xml;base64,')
  background-size: contain
  opacity: .5
  animation(bounce 2s infinite)

@keyframes bounce
  0%
    transform(translateY(0))
  50%
    transform(translateY(-30px))